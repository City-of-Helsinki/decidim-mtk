<% if available_locales.length > 1 %>
  <li role="menuitem" class="menu-item is-dropdown-submenu-parent">
    <%= link_to do %>
      <strong><small><%= t("name", scope: "locale") %></small></strong>
    <% end %>
    <ul class="menu vertical nested" data-submenu>
      <% (available_locales - [I18n.locale.to_s]).each do |locale| %>
        <li role="menuitem" class="is-submenu-item is-dropdown-submenu-item">
          <%= link_to locale_name(locale), decidim.locale_path(locale: locale), method: :post %>
        </li>
      <% end %>
    </ul>
  </li>
<% end %>
