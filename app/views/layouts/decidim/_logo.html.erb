<% if organization %>
  <%= link_to decidim.root_url(host: organization.host) do %>
    <span>
      <%= render partial: "layouts/decidim/logo_image", locals: { organization: organization } %>
    </span>
    <span class="hide-for-small-only">
      <span class="name"><%= t 'service_name' %></span>
    </span>
  <% end %>
<% else %>
  <%= Decidim.application_name %>
<% end %>
