<%= render "shared/page_header" do %>
  <h1>
    <%= proposal_wizard_step_title action_name %>
  </h1>
  <% if false %>
    <p class="margin-top-1">
      <%= link_to :back do %>
        <%= icon "chevron-left", class: "icon--small" %>
        <%= wizard_aside_back_text %>
      <% end %>
    </p>
  <% end %>
<% end %>

<div class="wrapper">
  <div class="row">
    <div class="columns large-6 small-centered">
      <%= render partial: "wizard_header", locals: { callout_help_text_class: "warning" } %>

      <div class="card">
        <div class="p-m">
          <%= render partial: "proposal_preview", locals: { proposal: @proposal } %>
        </div>
      </div>

      <div class="row column flex-center">
        <%= link_to t(".modify"), edit_draft_proposal_path(@proposal) %>

        <%= button_to t(".publish"), publish_proposal_path(@proposal), method: :post, class: "button large hollow secondary mt-s mb-none" %>
      </div>

      <div class="row column margin-top-4">
        <p class="text-center">
          <%= t '.dont_want_name_visible' %>
          <%= link_to t('.edit_profile'), decidim.account_path, target: '_blank' %>.
          <%= t '.after_edit_profile' %>
        </p>
      </div>
    </div>
    <div class="columns large-3"></div>
  </div>
</div>
